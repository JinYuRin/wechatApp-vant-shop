.container {
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #FFFFFF;
    /*padding只是内间距的左右间距*/
}

.title-container {
    display: flex;
    flex-direction: row;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

/* components/realm/index.wxss */
.fences-container {
    display: flex;
    flex-direction: column;
}

.discount-price {
    margin-left: 20rpx;
}

.price-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sku-preview {
    display: flex;
    flex-direction: row;
}

.sku-pending {
    font-size: 20rpx;
}

.hr {
    margin-top: 30rpx;
    width: 690rpx;
    height: 2 rpx;
    background-color: #E9E9E9;
}

.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}

.sku-pending > text:first-child {
    color: #999999;
}

.sku-pending > text:nth-child(2) {
    color: #666666;
}

.counter-container {
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 200rpx;
}
/*子代选择器*/
.counter-container text{
    color: #555555;
    font-size: 24rpx;
}
.bottom-btn{
    display:flex;
    flex-direction:row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100rpx;
    background-color: #333333;
    position: absolute;
    bottom: 0;
}
.out-stock{
    /*能够覆盖btn的背景色吗*/
    background-color: #DCEBE6;
}
.bottom-btn text{
    color: #FFFFFF;
}