<block wx:for="{{2}}" wx:key="index">
    <view class="px-4 py-3 bg-white rounded-lg-my mb-3">
        <van-checkbox custom-class="checkbox__shop" value="{{ checked }}" bind:change="onChange">
            <view class="flex justify-between" style="width:610rpx">
                <view class="flex align-center">
                    <van-icon name="shop-o" size="30rpx" />
                    <text class="mx-1 font-sm font-weight-bold">卡辑旗舰店</text>
                    <van-icon name="arrow" size="20rpx" />
                </view>
                <van-tag color="#fcedeb" text-color="#f2270c" round type="primary">优惠券</van-tag>
            </view>
        </van-checkbox>
        <!-- 需要选用复选框组 -->
        <block wx:for="{{2}}" wx:key="index">
            <!-- 玛德莫名其妙的不能使用num插槽,这个破烂UI -->
            <van-checkbox label-disabled="{{true}}" custom-class="checkbox__card" value="{{ checked }}" bind:change="onChange">
                <view style="width:610rpx">
                    <van-card price="198.00" title="卡辑汉服女仙气古装齐腰原创齐胸襦裙成人古风女生六米学生夏季薄款 含娇齐腰汉服3米（上襦+吊带+下裙+大袖衫） M" thumb="{{ imageURL }}" custom-class="card" title-class="card-title" price-class="card-price" thumb-class="card-thumb">
                        <view slot="desc" class="card-desc rounded-lg text-ellipsis">
                            含娇齐腰汉服3米（上襦+吊带+下裙+大袖衫），M
                        </view>
                        <view slot="tags" class="mb-2">
                            <text class="tag">白条3期免息</text>
                        </view>
                        <view slot="footer">
                            <text>移入关注</text>
                            <text class="text-light-muted mx-1">|</text>
                            <text>删除</text>
                        </view>
                    </van-card>
                </view>
            </van-checkbox>
        </block>
    </view>
</block>